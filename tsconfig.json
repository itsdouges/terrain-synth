{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2019"
  },
  "include": [
    "../hello-worlds/packages/core/dist/esm",
    "../hello-worlds/packages/planets/dist/esm",
    "../hello-worlds/packages/react/dist/ems"
  ],
  "exclude": ["node_modules"]
}
